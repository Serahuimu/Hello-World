<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
      <servlet-name>GuessServlet</servlet-name>
      <servlet-class>controller.GuessServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>GuessServlet</servlet-name>
      <url-pattern>/Guess</url-pattern>
  </servlet-mapping>
  <session-config>
      <session-timeout>
          30
      </session-timeout>
  </session-config>
  <!-- 默认访问页面（XML方式配置 -->
  <welcome-file-list>
      <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
